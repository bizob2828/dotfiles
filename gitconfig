[user]
  name = Bob Evans
  email = robert.evans25@gmail.com

[credential]
  helper = osxkeychain

[core]
  excludesfile = /Users/bobevans/.gitignore_global

[hub]
  protocol = https

[fetch]
  prune = true

[push]
  default = current
  followTags = true

[alias]
  st = status
  dif = diff --staged
  last = log -1 HEAD
  unstage = reset HEAD --
  undo = reset --hard HEAD
  uncommit = reset HEAD~
  c = commit -m
  ca = commit --ammend -C HEAD
  up = "pull --rebase --autostash"
  br = "symbolic-ref --short HEAD"
  cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear

[submodule]
  recurse = true
[pull]
  rebase = true
